{
    "description": "SIREN Learning of the Armadillo mesh using SDF values.",
    "num_epochs": 1000,
    "sampling_opts": {
        "samples_on_surface": 0,
        "samples_off_surface": 0,
        "random_surf_samples": true,
        "sampler": false
    },
    "dataset": "armadillo.ply",
    "batch_size": 20000,
    "checkpoint_path": "logs",
    "experiment_name": "armadillo_sdf",
    "epochs_to_checkpoint": 10,
    "epochs_to_reconstruction": 100,
    "loss": "sdf",
    "optimizer": {
        "type": "adam",
        "lr": 1e-4
    },
    "reconstruction": {
        "resolution": 256,
        "output_file": "final"
    },
    "network": {
        "hidden_layer_nodes": [256, 256, 256],
        "w0": 30
    }
}
