{
    "description": "SIREN Learning of the Armadillo mesh using true SDF values and non-uniform sampling.",
    "num_epochs": 100,
    "sampling_opts": {
        "samples_on_surface": 0,
        "samples_off_surface": 0,
        "random_surf_samples": true,
        "sampler": false
    },
    "dataset": "armadillo_stanford.ply",
    "batch_size": 50000,
    "scaling": "bbox",
    "checkpoint_path": "logs",
    "experiment_name": "armadillo_sdf_stanford_w0_60_b50000",
    "epochs_to_checkpoint": 10,
    "epochs_to_reconstruction": [1, 10, 100],
    "loss": "sdf",
    "optimizer": {
        "type": "adam",
        "lr": 1e-4
    },
    "reconstruction": {
        "resolution": 256,
        "output_file": "final"
    },
    "network": {
        "hidden_layer_nodes": [256, 256, 256, 256],
        "w0": 60
    }
}
