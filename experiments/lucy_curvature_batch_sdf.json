{
    "description": "SIREN Learning of the Lucy mesh using SDF values and non-uniform sampling.",
    "num_epochs": 10000,
    "sampling_opts": {
        "uniform_sampling": false,
        "curvature_iteration_fractions": [0.2, 0.6, 0.2],
        "percentile_thresholds": [0.6, 0.95]
    },
    "dataset": "lucy_simple_curvs.ply",
    "batch_size": 20000,
    "checkpoint_path": "results",
    "experiment_name": "lucy_biased_curvature_sdf",
    "epochs_to_checkpoint": 10,
    "loss": "sdf",
    "optimizer": {
        "type": "adam",
        "lr": 1e-4
    },
    "reconstruction": {
        "resolution": 128,
        "output_file": "final"
    },
    "network": {
        "hidden_layer_nodes": [256, 256, 256],
        "w0": 60
    }
}
